<odoo>
    <!-- Action tool.category -->
    <record id="action_tool_category" model="ir.actions.act_window">
        <field name="name">Tool Categories</field>
        <field name="res_model">tool.category</field>
        <field name="view_mode">tree,form,search</field>
        <field name="domain">[]</field>
        <field name="context">{}</field>
        <field name="help" type="html">
            <p class="oe_view_nocontent_create">
                This is empty so add a new Tool Category record to the inventory.
            </p>
        </field>
    </record>

    <!-- View tool.category View Tree -->
    <record id="view_tool_category_tree" model="ir.ui.view">
        <field name="name">view.tool.category.tree</field>
        <field name="model">tool.category</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name" />
                <field name="description" />
            </tree>
        </field>
    </record>

    <!-- View tool.category form -->
    <record id="view_tool_category_form" model="ir.ui.view">
        <field name="name">view.tool.category.form</field>
        <field name="model">tool.category</field>
        <field name="arch" type="xml">
            <form string="Tool Category">
                <group>
                    <field name="name" />
                    <field name="description" />
                </group>
            </form>
        </field>
    </record>

    <!-- View tool.category search -->
    <record id="view_tool_category_search" model="ir.ui.view">
        <field name="name">view.tool.category.search</field>
        <field name="model">tool.category</field>
        <field name="arch" type="xml">
            <search>
                <group expand="1" string="Group By">
                    <filter string="Category Name" name="name" domain="[]"
                        context="{'group_by':'name'}" />
                </group>
            </search>
        </field>
    </record>

</odoo>