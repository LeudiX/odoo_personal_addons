<odoo>
    <!-- Action inventory.movement -->
    <record id="action_inventory_movement" model="ir.actions.act_window">
        <field name="name">Inventory Movements</field>
        <field name="res_model">inventory.movement</field>
        <field name="view_mode">tree,form,search,lmap</field>
        <field name="domain">[]</field>
        <field name="context">{}</field>
        <field name="help" type="html">
            <p class="oe_view_nocontent_create">
                This is empty so add a new Tool Movement record to the inventory.
            </p>
        </field>
    </record>

    <!-- View inventory.movement View Tree -->
    <record id="view_inventory_movement_tree" model="ir.ui.view">
        <field name="name">view.inventory.movement.tree</field>
        <field name="model">inventory.movement</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name" readonly="1" />
                <field name="tool_id" />
                <field name="movement_date" />
                <field name="quantity" />
                <field name="movement_type" />
                <field name="source_location_id" />
                <field name="destination_location_id" />
                <field name="responsible_user_id" />
            </tree>
        </field>
    </record>

    <!-- View inventory.movement Leaflet Map View -->
    <record id="view_inventory_movement_lmap" model="ir.ui.view">
        <field name="name">view.inventory.movement.lmap</field>
        <field name="model">inventory.movement</field>
        <field name="arch" type="xml">
            <lmap/>
        </field>
    </record>

    <!-- View inventory.movement form -->
    <record id="view_inventory_movement_form" model="ir.ui.view">
        <field name="name">view.inventory.movement.form</field>
        <field name="model">inventory.movement</field>
        <field name="arch" type="xml">
            <form string="Inventory Movement">
                <sheet>
                    <group>
                        <field name="name" readonly="1" />
                        <field name="tool_id" />
                        <field name="movement_date" />
                        <field name="quantity" />
                        <field name="movement_type" />
                        <field name="source_location_id" />
                        <field name="destination_location_id" />
                        <field name="responsible_user_id" />
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- View inventory.movement search -->
    <record id="view_inventory_movement_search" model="ir.ui.view">
        <field name="name">view.inventory.movement.search</field>
        <field name="model">inventory.movement</field>
        <field name="arch" type="xml">
            <search>
                <group expand="1" string="Group By">
                    <filter string="Movement Type" name="movement_type" domain="[]"
                        context="{'group_by':'movement_type'}" />
                    <filter string="Tool" name="tool_id" domain="[]"
                        context="{'group_by':'tool_id'}" />
                </group>
            </search>
        </field>
    </record>
</odoo>