<odoo>
    <!-- Action tool.inventory -->
    <record id="action_tool_inventory" model="ir.actions.act_window">
        <field name="name">Tools Inventory</field>
        <field name="res_model">tool.inventory</field>
        <field name="view_mode">tree,form,search</field>
        <field name="domain">[]</field>
        <field name="context">{}</field>
        <field name="help" type="html">
            <p class="oe_view_nocontent_create">
                This is empty so add a new Tool record to the inventory.
            </p>
        </field>
    </record>

    <!-- View tool.inventory View Tree -->
    <record id="view_tool_inventory_tree" model="ir.ui.view">
        <field name="name">view.tool.inventory.tree</field>
        <field name="model">tool.inventory</field>
        <field name="arch" type="xml">
            <tree>
                <field name="tool_name" />
                <field name="tool_code" readonly="1" />
                <field name="category_id" />
                <field name="quantity" />
                <field name="min_quantity" />
                <field name="location_id" />
                <field name="is_active" />
            </tree>
        </field>
    </record>

    <!-- View tool.inventory form -->
    <record id="view_tool_inventory_form" model="ir.ui.view">
        <field name="name">view.tool.inventory.form</field>
        <field name="model">tool.inventory</field>
        <field name="arch" type="xml">
            <form string="Tool Inventory">
                <sheet>
                    <group>
                        <field name="tool_name" />
                        <field name="tool_code" readonly="1"/>
                        <field name="category_id" />
                        <field name="quantity" />
                        <field name="min_quantity" />
                        <field name="location_id" />
                        <field name="maintenance_date" />
                        <field name="is_active" />
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- View tool.inventory search -->
    <record id="view_tool_inventory_search" model="ir.ui.view">
        <field name="name">view.tool.inventory.search</field>
        <field name="model">tool.inventory</field>
        <field name="arch" type="xml">
            <search>
                <group expand="1" string="Group By">
                    <filter string="Category" name="category_id" domain="[]"
                        context="{'group_by':'category_id'}" />
                    <filter string="Location" name="location_id" domain="[]"
                        context="{'group_by':'location_id'}" />
                </group>
            </search>
        </field>
    </record>

</odoo>