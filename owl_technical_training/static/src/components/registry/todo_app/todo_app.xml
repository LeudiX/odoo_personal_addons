<templates xml:space="preserve">
    <t t-name="owl_technical_training.todo_app">
        <div class="p-4 border rounded shadow max-w-md mx-auto mt-10 bg-white">
            <h4>ðŸ“‹ Todo App</h4>
            <div class="my-3">
                <input type="text" class="form-control w-50" placeholder="Enter a new task" t-on-keyup="addTask" t-ref="add-input"/>
            </div>
            <div class="task-list">
                <t t-foreach="displayedTasks" t-as="task" t-key="task.id">
                    <Task task="task" store="this.store"/>
                </t>
            </div>
            <div class="row p-2" t-if="store.tasks.length">
                <div class="text-info">
                    <t t-esc="displayedTasks.length"/>
                    <t t-if="displayedTasks.length lt store.tasks.length">
                    /                        <t t-esc="store.tasks.length"/>
                    </t>
                    task(s)
                </div>
                <div class="p-2 d-flex gap-3">
                    <span class="btn btn-sm btn-outline-warning rounded-pill px-2" t-foreach="['all', 'active', 'completed']" t-as="f" t-key="f" t-att-class="{active: filter.value===f}" t-on-click="() => this.setFilter(f)" t-esc="f"/>
                </div>
            </div>
        </div>
    </t>
</templates>